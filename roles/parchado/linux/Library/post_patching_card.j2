{
    "@type": "MessageCard",
    "@context": "http://schema.org/extensions",
    "themeColor": "0076D7",
    "summary": "Linux patching automation notification",
    "sections": [{
        "activityTitle": "Linux patching",
        "activitySubtitle": "Post patching validation",
        "activityImage": "data:image/png;base64,",
        "facts": [{
            "name": "Hostname",
            "value": "{{ inventory_hostname }}"
        },{
            "name": "Detailed result",
            "value": "{{ exec_message }}"
        }],
        "potentialAction": [
            {
                "@context": "http://schema.org",
                "@type": "ViewAction",
                "name": "View in Ansible Tower",
                "target": [
                    "{{ tower_host }}/{{ tower_job_suffix }}"
                ]
            }
        ],
        "markdown": true
    }]
}